@model GRA.Controllers.ViewModel.Home.DashboardViewModel

<div class="row">
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModelLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="confirmModalLabel">Submit Log</h4>
                </div>
                <div class="modal-body">
                    <p id="modal-text"></p>
                    <p id="modal-review-text" style="color: gray"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                    <button id="modal-confirmbutton" onclick="$('#log-activity').submit();" type="submit" class="btn btn-success pull-right" aria-label="Confirm">
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" style="font-size: larger;">
    <div class="col-sm-3 text-center">
        <div class="panel panel-default">
            <p>
                @if (Model.DynamicAvatarPaths != null && Model.DynamicAvatarPaths.Count() > 0)
                {
                    <a asp-controller="Avatar" asp-action="Index">
                        <div class="dynamic-avatar-container-dashboard">
                            @foreach (var zIndex in Model.DynamicAvatarPaths.Keys)
                            {
                                <img src="~/@Model.DynamicAvatarPaths[zIndex]"
                                    style="z-index: @zIndex"
                                    class="dynamic-avatar" />
                            }
                        </div>
                    </a>
                }
                else if (!string.IsNullOrEmpty(Model.AvatarPath))
                {
                    <a asp-controller="Avatar" asp-action="Index">
                        <img src="~/@Model.AvatarPath"
                             asp-append-version="true"
                             width="200" />
                    </a>
                }
                else
                {
                    <a asp-controller="Avatar" asp-action="Index">
                        <img src="~/images/no_avatar.png"
                             class="img img-responsive center-block"
                             style="width:200px;"
                             asp-append-version="true" />
                    </a>
                }
            </p>
            <div class="dashboard-activity">
                <p style="font-size: x-large;">You have <strong>@Model.CurrentPointTotal points</strong>.</p>
                
                @if (Model.Goal.HasValue)
                {
                    <p>
                        Your goal is @Model.Goal.Value @Model.ActivityDescriptionPlural.
                    </p>
                }

                @if (Model.AchieverProgressPercent.HasValue)
                {
                    <p>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@Model.AchieverProgressPercent.Value" aria-valuemin="0" aria-valuemax="100" style="width: @Model.AchieverProgressPercent.Value%;">
                                @Model.AchieverProgressPercent.Value%
                            </div>
                        </div>
                    </p>
                }
                <p>See your <a asp-controller="Profile" asp-action="History">activity history</a>.</p>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-body text-center">
                <span class="lead">Welcome <strong>@Model.FirstName!</strong></span>

                @if (Model.TeamName != null)
                {
                    <p style="font-size: 10pt"> You are on <strong>@Model.TeamName</strong> team. </p>
                }

                @if ((GRA.Domain.Model.SiteStage)Context.Items[GRA.Controllers.ItemKey.SiteStage] == GRA.Domain.Model.SiteStage.RegistrationOpen)
                {
                    <p class="lead" style="padding-top: 2rem;">Once the program starts, you will enter your activity right here!</p>
                }
            </div>
        </div>

        @if ((GRA.Domain.Model.SiteStage)Context.Items[GRA.Controllers.ItemKey.SiteStage] == GRA.Domain.Model.SiteStage.ProgramOpen)
        {
             <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="lead">Enter Activity</span>
                </div>
                
                <div class="panel-body">
                    <form id="log-activity" asp-controller="Home" asp-action="LogActivity" method="post" role="form">
                        @if (Model.SingleEvent)
                        {
                            <input asp-for="SingleEvent" type="hidden" />
                        }
                        else
                        {
                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label class="control-label">Enter @Model.ActivityDescriptionPlural @Model.TranslationDescriptionPastTense</label>
                                    <input id="amount-field" asp-for="ActivityAmount" type="text" value="@Model.ActivityAmount" class="form-control" />
                                    <span asp-validation-for="ActivityAmount" class="text-danger"></span>
                                </div>
                            </div>
                        }

                        @if (Model.AskTitle ?? false)
                        {
                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label asp-for="Title" class="control-label"></label>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                    <input id="title-field" asp-for="Title" class="form-control" />
                                </div>
                            </div>
                        }

                        @if (Model.AskAuthor ?? false)
                        {
                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label asp-for="Author" class="control-label"></label>
                                    <input id="author-field" asp-for="Author" class="form-control" />
                                </div>
                            </div>
                        }

                        @if (Model.AskReview ?? false)
                        {
                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label asp-for="Review" class="control-label"></label>
                                    <textarea id="review-field" 
                                              asp-for="Review" 
                                              class="form-control"
                                              style="resize: none;"
                                              rows=4>

                                    </textarea>
                                </div>
                            </div>
                        }
                        <button type="button"
                                class="btn center-block btn-success btn-lg"
                                data-toggle="modal"
                                data-target="#confirmModal">
                            @if (Model.SingleEvent)
                            {
                                <span class="buttonText">Log @Model.ActivityDescription</span>
                            }
                            else
                            {
                                <span class="buttonText">Log @Model.ActivityDescriptionPlural</span>
                            }
                        </button>
                    </form>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="lead">Enter Secret Code</span>
                </div>
                <div class="panel-body">
                    <form asp-controller="Home" asp-action="LogSecretCode" method="post" role="form">
                        <div class="row row-spacing" style="text-align:center;">
                            <div class="col-xs-12">
                                <small>Secret codes can be acquired by attending library programs or completing activity challenges at the library.</small>
                            </div>
                        </div>
                        <div class="row row-spacing">
                            <div class="col-xs-12">
                                <label asp-for="SecretCode" class="control-label"></label>
                                <input asp-for="SecretCode" class="form-control" />
                                @if (!string.IsNullOrWhiteSpace(Model.SecretCodeMessage))
                                {
                                    <span>@Html.Raw(Model.SecretCodeMessage)</span>
                                }
                            </div>
                        </div>

                        <button type="submit" class="btn center-block btn-success btn-lg btn-spinner">
                            <span class="buttonText">Submit Code</span>
                            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
    <div class="col-sm-3 text-center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a asp-controller="Profile" asp-action="History" class="lead">Your badges</a>
            </div>
            <div class="panel-body">
                <div class="row">
                    @if (Model.Badges.Count() > 0)
                    {
                        int display = 0;
                        foreach (var badge in Model.Badges)
                        {
                            <div class="col-md-6 col-sm-12 col-xs-4 dashboard-badge"><img class="img-thumbnail badge-sm" src="~/@badge.Filename" asp-append-version="true" /></div>
                            display++;
                            if (display >= 6)
                            {
                                <div class="col-xs-12">
                                    See more of your badges in your <a asp-controller="Profile" asp-action="History" class="lead">history</a>!
                                </div>
                                break;
                            }
                        }
                    }
                    else
                    {
                        <p>Participate in program activities to earn badges!</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $('#confirmModal').on('show.bs.modal', function(event) {
            var button = $(event.relatedTarget);
            var modal = $(this);

            var text = 'You are about to submit: ';

            var amountText = $('#amount-field').val();

            if (amountText)
            {
                text += amountText;
            }

            var titleText = $('#title-field').val();

            if (titleText)
            {
                text += titleText;
            }

            var authorText = $('#author-field').val();
            if (authorText)
            {
                text += ', By: ' + authorText;
            }

            modal.find('#modal-text').text(text);

            modal.find('#modal-review-text').text($('#review-field').val());
            modal.find("#modal-confirmButton").show();
        })
    </script>
}