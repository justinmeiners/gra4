@model GRA.Controllers.ViewModel.MissionControl.Challenges.ChallengesApprovalListViewModel


<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.Tasks.Count() == 0)
        {
            <div class="alert alert-warning">No challenges to approve</div>
        }
        else
        {
            <div>
                <table class="table table-condensed table-bordered link-table">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Challenge</th>
                            <th>Task</th>
                            <th>Submission</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model.Tasks)
                        {
                            <tr>
                                <td>
                                    <a href="/MissionControl/Participants/Detail/@task.UserId">@task.User.Username</a>
                                </td>
                                <td>
                                    <a href="/MissionControl/Challenges/Edit/@task.ChallengeId">@task.Challenge.Name</a>
                                </td>
                                <td>
                                    @task.Title
                                </td>
                                <td class="td-class">
                                    @task.SubmissionText
                                </td>
                                <td>
                                    <form asp-controller="Challenges" asp-action="ApproveTask" method="post" role="form" style="display:inline">
                                        <input value="@task.ChallengeId" name="challengeId" type="hidden"/>
                                        <input value="@task.Id" name="taskId" type="hidden"/>
                                        <input value="@task.UserId" name="userId" type="hidden"/>
                                        <button type="submit" name="approve" value="true" class="btn btn-success">Approve</button>
                                        <button type="submit" name="approve" value="false" class="btn btn-danger">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
